        <xpath expr="//img[@t-if='company.logo']" position="replace">
            <!-- <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" /> -->
            <t t-if="o">
                <t t-if="o._name == 'sale.order'">
