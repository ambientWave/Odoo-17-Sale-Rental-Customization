    <template id="report_saleorder_document_inherit" inherit_id="sale.report_saleorder_document">
        <xpath expr="//thead[@style='display: table-row-group']/tr/th[@name='th_quantity']" position="replace">
            <th name="th_quantity" class="text-end">QTY</th>
        </xpath>
        <xpath expr="//thead[@style='display: table-row-group']/tr/th[@name='th_subtotal']" position="replace">
            <th name="th_subtotal" class="text-end">
                <span>Subtotal</span>
            </th>
        </xpath>        
        <xpath expr="//table[hasclass('o_main_table')]/thead/tr/th[1]" position="before">
            <t t-if="doc.print_image and doc.image_sizes in ('image', 'image_medium', 'image_small') ">
                <th style="width:15%;"></th>
            </t>
        </xpath>
        <xpath expr="//table[hasclass('o_main_table')]/thead/tr/th[2]" position="before">
            <t t-if="doc.is_rental_order">
                <th class="text-end" t-if="any(fees_value in ([line for line in doc.order_line if line.rental_company_fees != 0]) for fees_value in ([line for line in doc.order_line if line.rental_company_fees != 0]))">Company Fees</th>
            </t>
        </xpath>
        <xpath expr="//table[hasclass('o_main_table')]/thead/tr/th[2]" position="before">
            <t t-if="doc.is_rental_order">
                <th class="text-end">Days</th>
            </t>
        </xpath>
        <xpath expr="//table[hasclass('o_main_table')]/thead/tr/th[2]" position="before">
            <t t-if="doc.is_rental_order">
                <th class="text-end">Price/Day</th>
            </t>
        </xpath>

        <xpath expr="//table/tbody[hasclass('sale_tbody')]/t[2]/tr/t/td[1]" position="before">
            <t t-if="doc.image_sizes == 'image' and doc.print_image ">
                <td class="text-center">
                    <img t-if="line.product_id.image_1920" t-attf-src="data:image/*;base64,{{line.product_id.image_1920}}" style="resize:both;width:95%;height:auto; border: 2px solid #cecece; padding-left: 1px;padding-bottom: 1px;padding-right: 1px;padding-top: 1px;"/>
                </td>
            </t>
            <t t-if="doc.image_sizes == 'image_medium' and doc.print_image">
                <td class="text-center">
                    <img t-if="line.product_id.image_1920" t-attf-src="data:image/*;base64,{{line.product_id.image_1920}}" style="resize:both;width:70%;height:auto; border: 2px solid #cecece; padding-left: 1px;padding-bottom: 1px;padding-right: 1px;padding-top: 1px;"/>
                </td>
            </t>
            <t t-if="doc.image_sizes == 'image_small' and doc.print_image ">
                <td class="text-center">
                    <img t-if="line.product_id.image_1920" t-attf-src="data:image/*;base64,{{line.product_id.image_1920}}" style="resize:both;width:50%;height:auto; border: 2px solid #cecece; padding-left: 1px;padding-bottom: 1px;padding-right: 1px;padding-top: 1px;"/>
                </td>
            </t>
        </xpath>
        <xpath expr="//table/tbody[hasclass('sale_tbody')]/t[2]/tr/t/td[2]" position="before">
            <t t-if="doc.is_rental_order">
                <td t-if="line.is_rental and (line.rental_company_fees != 0)" name="td_rental_company_fees_rate" class="text-end">
                    <span t-field="line.rental_company_fees"></span> %
                </td>
            </t>
        </xpath>
        <xpath expr="//table/tbody[hasclass('sale_tbody')]/t[2]/tr/t/td[2]" position="before">
            <t t-if="doc.is_rental_order">
                <td name="td_rental_company_fees_rate" class="text-end">
                    <span t-if="line.is_rental" t-field="line.rental_duration_in_days"/>
                </td>
            </t>
        </xpath>
        <xpath expr="//table/tbody[hasclass('sale_tbody')]/t[2]/tr/t/td[2]" position="before">
            <t t-if="doc.is_rental_order">
                <td name="td_rental_rate" class="text-end">
                    <span t-if="line.is_rental" t-field="line.rental_price_per_day"/>
                </td>
            </t>
        </xpath>
